/* pages/comp/school/school.wxss */
.search-card{
  position: fixed;
  top:0rpx;
  height:80rpx;
  width:100%;
  background-color: #DE3344;
  display: flex;
  flex-direction: row;
  justify-content: center;
}
.search-background{
  height:60rpx;
  width:500rpx;
  background-color: #FFFFFF;
  border:1rpx solid #FFFFFF;
  border-radius: 6rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  filter:opacity(80%);
  margin-left:30rpx;
}
.search-write{
  height:50rpx;
  width:400rpx;
}

.sch-global{
  border-top:80rpx solid #ffffff;
  height:auto;
  width:100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.school-list{
  height:180rpx;
  width:720rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-bottom: 1rpx solid #EEEEEE;
}
.include{
  height:179rpx;
  width:720rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.school-list:last-child{
  border-bottom:0rpx;
}
.school-detail{
  margin-left:30rpx;
  display: flex;
  flex-direction: column;
}